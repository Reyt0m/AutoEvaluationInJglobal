{
	"manifest_version": 3,
	"name": "J-GLOBAL AI 評価",
	"version": "1.0",
	"description": "J-GLOBALの研究者情報をGemini AIで評価する",    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],

	"action": {
	  "default_popup": "popup.html"
	},
	"background": {
	},
	"content_scripts": [
	  {
		"matches": ["https://jglobal.jst.go.jp/search/*"],
		"js": ["content.js"]
	  },
	  {
		"matches": ["https://jglobal.jst.go.jp/bookmark*"],
		"js": ["content.js"]
	  },
	  {
		"matches": ["https://aistudio.google.com/app/prompts/*"],
		"js": ["translate.js"]
	  }
	]

  }
